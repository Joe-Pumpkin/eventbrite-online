
<h1>Hello <%= @user.first_name %>! </h1> 

<div class="card border-info mt-5 mx-auto" style="max-width: 40rem;">
    <div class="card-header"><%= @user.first_name %> <%= @user.last_name%></div>
      <div class="card-body text-info">
        <h5 class="card-title">Description :</h5>
          <p class="card-text"><%= @user.description%></p>
        
          
        <h5 class="card-title">Email :</h5>
          <p class="card-text"><%= @user.email %></p>
          


<h3>Avatar actuel</h3>
<%if @user.avatar.attached?%>
  <%= image_tag @user.avatar, alt: 'avatar', class: 'card-img-top'%>
<%else%>
  <p>=== Il n'y a pas encore d'avatar lié à cet utilisateur ===</p>
  <h3>Changer d'avatar ?</h3>
<%= form_tag user_avatars_path(@user), multipart: true do %>
<img class="card-img" src="https://picsum.photos/id/<%= rand(1..99) %>/500/230" alt="Card image cap">
  <%= file_field_tag :avatar %>
  <%= submit_tag "mettre à jour" %>
<% end %>
<%end%>
      </div>
      </div>
    
  

<div class="container">
 
<%= link_to "Edite ton profil",  edit_user_registration_path, class: 'btn btn-primary' %>
</div>

